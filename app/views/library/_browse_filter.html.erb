<div id='browse_filter_row' class='col-md-12'>
  <div id="browse_filter_dropdown" class="ui dropdown col-md-12">
    <div id="" class="">
      <span class='browse_header_text'><i class="fa fa-angle-down" aria-hidden="true"></i> SELECT FILTERS</span>
    </div>
    <div id='browse_filter_dropdown_menu' class="menu">
      <div id='browse_filter_dropdown_parent' class="item col-md-12">
        <div id='' class='col-md-4'>
          <div class='browse_filter_header'>
            THEME
          </div>
          <div id='theme_checkboxes' class=''>
            <ul class='list-unstyled'>
              <li>
                <input class='check_box' id='C4D' type='checkbox' value=".C4D">
                <label for='C4D'>C4D <span class='filter_label_count'>[<%= @c4dCount %>]</span></label>
              </li>
              <li>
                <input class='check_box' id='SOP' type='checkbox' value=".SOP">
                <label for='SOP'>SOP <span class='filter_label_count'>[<%= @sopCount %>]</span></label>
              </li>
              <% @tags.each do |title, value| %>
                <li>
                  <input class='check_box' id='<%= title.gsub(' ', '_') %>' type='checkbox' value=".<%= title.gsub(' ', '_') %>">
                  <label for='<%= title %>'><%= title %> <span class='filter_label_count'>[<%= value[:count] %>]</span></label>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div id='' class='col-md-4'>
          <div class='border_left_and_right browse_filter_header'>
            PLACE
          </div>
          <div id='place_checkboxes' class='border_left_and_right_gold'>
            <ul class='list-unstyled'>
              <% @places.each do |title, value| %>
                <li>
                  <input class='check_box' id='<%= title.gsub(' ', '_') %>' type='checkbox' value=".<%= title.gsub(' ', '_') %>">
                  <label for='<%= title %>'><%= title %> <span class='filter_label_count'>[<%= value[:count] %>]</span></label>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div id='' class='col-md-4'>
          <div class='browse_filter_header'>
            LANGUAGE
          </div>
          <div id='language_checkboxes' class=''>
            <ul class='list-unstyled'>
              <% @languages.each do |title, value| %>
                <li>
                  <input class='check_box' id='<%= title.gsub(' ', '_') %>' type='checkbox' value=".<%= title.gsub(' ', '_') %>">
                  <label for='<%= title %>'><%= title %> <span class='filter_label_count'>[<%= value[:count] %>]</span></label>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div id='overflow_filter_arrows' class='col-md-12 text-center'>
        <i id='filter_up_arrows' class="fa fa-angle-double-up display_none"></i>
        <i id='filter_down_arrows' class="fa fa-angle-double-down"></i>
      </div>
    </div>
  </div>
  <div id='browse_filter_clear_all' class='col-md-offset-2 col-md-2'>
    <a href=''>Clear All</a>
  </div>
  <div id='browse_filter_display_div' class='col-md-6'>

  </div>
  <%= render 'library/browse_sort' %>
</div>